{
    "name": "BouncingMnist_Asvi",
    "n_gpu": 1,

    "arch": {
        "type": "BouncingMnistAsvi",
        "args": {}
    },
    "data_loader": {
        "type": "BouncingMnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 64,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "optim_args": {
                "lr": 0.001,
                "weight_decay": 0,
                "amsgrad": true
            }
        }
    },
    "metrics": ["ess", "log_marginal"],
    "trainer": {
        "epochs": 1000,
        "num_particles": 8,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        "type": "Trainer",
        "args": {},

        "monitor": "min val_loss",
        "early_stop": 50,

        "tensorboard": true
    }
}
