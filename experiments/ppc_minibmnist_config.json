{
    "name": "MiniBouncingMnist_Ppc",
    "n_gpu": 1,

    "arch": {
        "type": "BouncingMnistPpc",
        "args": {
          "temperature": 0.0001
        }
    },
    "data_loader": {
        "type": "MiniBouncingMnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 45,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "optim_args": {
                "lr": 0.0001,
                "weight_decay": 0,
                "amsgrad": true
            }
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
          "patience": 100,
          "cooldown": 25,
          "factor": 0.9
        }
    },
    "metrics": ["ess", "log_marginal"],
    "trainer": {
        "epochs": 1000,
        "monitor": "min val_loss",
        "save_dir": "saved/",
        "save_period": 10,
        "tensorboard": true,
        "verbosity": 2,
        "type": "PpcTrainer",
        "args": {
            "num_particles": 10,
            "num_sweeps": 5
        }
    }
}
