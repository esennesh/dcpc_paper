{
    "name": "MiniBouncingMnist_Ppc",
    "n_gpu": 1,

    "arch": {
        "type": "BouncingMnistPpc",
        "args": {
            "mnist_mean": "data/bmnist/mnist_mean.npy"
        }
    },
    "checkpoint": {
        "type": "ModelCheckpoint",
        "args": {
            "auto_insert_metric_name": false,
            "every_n_epochs": 10,
            "filename": "checkpoint_{epoch}",
            "mode": "min",
            "monitor": "valid/loss"
        }
    },
    "data_module": {
        "type": "MiniBouncingMnistDataModule",
        "args": {
            "data_dir": "data/",
            "batch_size": 512
        }
    },
    "lmodule": {
        "type": "LightningPpc",
        "args": {
            "cooldown": 50,
            "factor": 0.9,
            "lr": 0.001,
            "num_particles": 10,
            "num_sweeps": 5,
            "patience": 100
        }
    },
    "logger": {
        "type": "TensorBoardLogger",
        "args": {}
    },
    "trainer": {
        "type": "Trainer",
        "args": {
          "default_root_dir": "saved/",
          "devices": 2,
          "max_epochs": 1000,
          "min_epochs": 1
        }
    }
}
