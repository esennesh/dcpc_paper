{
    "name": "MiniBouncingMnist_Dcpc",

    "arch": {
        "type": "BouncingMnistDcpc",
        "args": {}
    },
    "checkpoint": {
        "type": "ModelCheckpoint",
        "args": {
            "auto_insert_metric_name": false,
            "every_n_epochs": 100,
            "filename": "checkpoint_{epoch}",
            "mode": "min",
            "monitor": "valid/loss"
        }
    },
    "data_module": {
        "type": "MiniBouncingMnistDataModule",
        "args": {
            "data_dir": "data/apg_training",
            "batch_size": 5
        }
    },
    "lmodule": {
        "type": "LightningDcpc",
        "args": {
            "cooldown": 50,
            "factor": 0.9,
            "lr": 1e-4,
            "num_particles": 10,
            "num_sweeps": 5,
            "patience": 100
        }
    },
    "logger": {
        "type": "TensorBoardLogger",
        "args": {}
    },
    "trainer": {
        "type": "Trainer",
        "args": {
          "default_root_dir": "saved/",
          "devices": [7],
          "max_epochs": 1000,
          "min_epochs": 1
        }
    }
}
