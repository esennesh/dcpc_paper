{
    "name": "BouncingMnist_Ppc",
    "n_gpu": 1,

    "arch": {
        "type": "BouncingMnistPpc",
        "args": {}
    },
    "data_loader": {
        "type": "BouncingMnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 512,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "optim_args": {
                "lr": 0.001,
                "weight_decay": 0,
                "amsgrad": true
            }
        }
    },
    "metrics": ["ess", "log_marginal"],
    "trainer": {
        "epochs": 1000,
        "monitor": "min val_loss",
        "save_dir": "saved/",
        "save_period": 1,
        "tensorboard": true,
        "verbosity": 2,
        "type": "PpcTrainer",
        "args": {
            "num_particles": 8
        }
    }
}
