{
    "name": "Homoskedastic_CelebA_Ppc",

    "arch": {
        "type": "GeneratorPpc",
        "args": {
            "heteroskedastic": false,
            "z_dim": 64
        }
    },
    "checkpoint": {
        "type": "ModelCheckpoint",
        "args": {
            "auto_insert_metric_name": false,
            "every_n_epochs": 10,
            "filename": "checkpoint_{epoch}",
            "mode": "min",
            "monitor": "valid/loss"
        }
    },
    "data_module": {
        "type": "CelebADataModule",
        "args":{
            "data_dir": "data/",
            "batch_size": 1024,
            "side": 32
        }
    },
    "lmodule": {
        "type": "LightningPpc",
        "args": {
            "cooldown": 10,
            "factor": 0.9,
            "lrp": 1e-3,
            "lrq": 1e-4,
            "num_particles": 10,
            "num_sweeps": 1,
            "patience": 50,
            "resampling": false
        }
    },
    "logger": {
        "type": "TensorBoardLogger",
        "args": {}
    },
    "trainer": {
        "type": "Trainer",
        "args": {
          "default_root_dir": "saved/",
          "devices": [7],
          "max_epochs": 100,
          "min_epochs": 1
        }
    }
}
