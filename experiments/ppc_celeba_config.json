{
    "name": "CelebA_Ppc",

    "arch": {
        "type": "CelebAPpc",
        "args": {}
    },
    "data_module": {
        "type": "CelebADataModule",
        "args":{
            "data_dir": "data/",
            "batch_size": 2048
        }
    },
    "lmodule": {
        "type": "LightningPpc",
        "args": {
            "cooldown": 10,
            "factor": 0.9,
            "lr": 1e-3,
            "num_particles": 4,
            "num_sweeps": 300,
            "patience": 50
        }
    },
    "logger": {
        "type": "TensorBoardLogger",
        "args": {}
    },
    "trainer": {
        "type": "Trainer",
        "args": {
          "default_root_dir": "saved/",
          "devices": 2,
          "max_epochs": 15,
          "min_epochs": 1
        }
    }
}
