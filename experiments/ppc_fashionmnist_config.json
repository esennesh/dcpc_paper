{
    "name": "FashionMnist_Ppc",

    "arch": {
        "type": "MnistPpc",
        "args": {}
    },
    "checkpoint": {
        "type": "ModelCheckpoint",
        "args": {
            "auto_insert_metric_name": false,
            "every_n_epochs": 5,
            "filename": "checkpoint_{epoch}",
            "mode": "min",
            "monitor": "valid/loss"
        }
    },
    "data_module": {
        "type": "FashionMnistDataModule",
        "args":{
            "data_dir": "data/",
            "batch_size": 4096
        }
    },
    "lmodule": {
        "type": "LightningPpc",
        "args": {
            "cooldown": 10,
            "factor": 0.9,
            "lr": 0.01,
            "num_particles": 2,
            "num_sweeps": 1,
            "patience": 50
        }
    },
    "logger": {
        "type": "TensorBoardLogger",
        "args": {}
    },
    "trainer": {
        "type": "Trainer",
        "args": {
          "default_root_dir": "saved/",
          "devices": 1,
          "max_epochs": 2000,
          "min_epochs": 1
        }
    }
}
