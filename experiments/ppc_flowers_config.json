{
    "name": "FlowersDiffusion_Ppc",

    "arch": {
        "type": "DiffusionPpc",
        "args": {
            "flash_attn": false,
            "T": 100,
            "thick": false
        }
    },
    "checkpoint": {
        "type": "ModelCheckpoint",
        "args": {
            "auto_insert_metric_name": false,
            "every_n_epochs": 10,
            "filename": "checkpoint_{epoch}",
            "mode": "min",
            "monitor": "valid/loss"
        }
    },
    "data_module": {
        "type": "Flowers102DataModule",
        "args":{
            "data_dir": "data/",
            "batch_size": 16,
            "side": 64
        }
    },
    "lmodule": {
        "type": "LightningPpc",
        "args": {
            "cooldown": 50,
            "factor": 0.9,
            "lr": 1e-6,
            "num_particles": 2,
            "num_sweeps": 1,
            "patience": 100
        }
    },
    "logger": {
        "type": "TensorBoardLogger",
        "args": {}
    },
    "trainer": {
        "type": "Trainer",
        "args": {
          "default_root_dir": "saved/",
          "devices": 4,
          "max_epochs": 1000,
          "min_epochs": 1
        }
    }
}
